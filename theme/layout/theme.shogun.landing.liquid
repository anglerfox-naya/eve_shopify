    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="theme-color" content="">
    <link rel="canonical" href="{{ canonical_url }}">
    <link rel="preconnect" href="https://cdn.shopify.com" crossorigin>

    {% if shop.permanent_domain contains 'evesleep-ie' or shop.name contains 'evesleep-ie' %}
      {%- assign global_region = 'ie' -%}
    {% elsif shop.permanent_domain contains 'evesleep-uk' or shop.name contains 'evesleep-uk' %}
      {%- assign global_region = 'uk' -%}
    {% elsif shop.permanent_domain contains 'evesleep-fr' or shop.name contains 'evesleep-fr' %}
      {%- assign global_region = 'fr' -%}
