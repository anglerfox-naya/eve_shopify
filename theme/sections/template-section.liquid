<link rel="stylesheet" href="{{ 'template-section.css' | asset_url }}" media="print" onload="this.media='all'">

{%- style -%}
.section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
}
@media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
        padding-top: {{ section.settings.padding_top }}px;
        padding-bottom: {{ section.settings.padding_bottom }}px;
    }
}
/* Other critical CSS here (Only required if Section is likely to contribute to the First Contentful Paint [https://web.dev/first-contentful-paint/]) */
{%- endstyle -%}

{%- comment -%}
If, in some instances, this Section's is loaded but show no content is shown due to conditional logic,
be sure to wrap the entire `section` element to prevent any unwanted padding appearing within the page.
{%- endcomment -%}

<section class="template-section color-{{ section.settings.color_scheme }} section-{{ section.id }}-padding">
  <div class="template-section__inner page-width">
      {%- comment -%} Content {%- endcomment -%}
  </div>
</section>

{% schema %}
{
  "name": "Template Section",
  "class": "section",
  "settings": [
    {
      "type": "select",
      "id": "color_scheme",
      "options": [
        {
          "value": "accent-1",
          "label": "t:sections.footer.settings.color_scheme.options__1.label"
        },
        {
          "value": "accent-2",
          "label": "t:sections.footer.settings.color_scheme.options__2.label"
        },
        {
          "value": "background-1",
          "label": "t:sections.footer.settings.color_scheme.options__3.label"
        },
        {
          "value": "background-2",
          "label": "t:sections.footer.settings.color_scheme.options__4.label"
        },
        {
          "value": "inverse",
          "label": "t:sections.footer.settings.color_scheme.options__5.label"
        }
      ],
      "default": "background-1",
      "label": "t:sections.footer.settings.color_scheme.label"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    },
    {
      "type": "text",
      "id": "whitelisted_collections",
      "label": "Whitelisted collections",
      "info": "Breadcrumbs on Product Templates do not include Collections unless defined here. To define Collections to display, list the collection URL [handle(s)](https://shopify.dev/api/liquid/basics/handle) here in a CSV format."
    }
  ],
  "presets": [
    {
      "name": "Template Section"
    }
  ]
}
{% endschema %}
